{
    "name": "dbp/relay-dispatch-bundle",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pdo_sqlite": "*",
        "ext-simplexml": "*",
        "ext-soap": "*",
        "api-platform/core": "^3.4",
        "dbp/relay-base-person-bundle": "^0.2.35",
        "dbp/relay-blob-library": "^0.2.4",
        "dbp/relay-core-bundle": "^0.1.194",
        "doctrine/collections": "^2",
        "doctrine/dbal": "^4.2",
        "doctrine/doctrine-bundle": "^2.13.1",
        "doctrine/doctrine-migrations-bundle": "^3.3.1",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^3.3",
        "psr/log": "^3.0",
        "symfony/config": "^6.4",
        "symfony/console": "^6.4",
        "symfony/dependency-injection": "^6.4.15",
        "symfony/doctrine-bridge": "^6.4.13",
        "symfony/framework-bundle": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/http-kernel": "^6.4",
        "symfony/messenger": "^6.4.15",
        "symfony/proxy-manager-bridge": "^6.4",
        "symfony/routing": "^6.4",
        "symfony/security-core": "^6.4",
        "symfony/uid": "^6.4",
        "symfony/validator": "^6.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^1.10.59",
        "phpstan/phpstan-phpunit": "^1.3.16",
        "phpstan/phpstan-symfony": "^1.3.7",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^6.4",
        "symfony/doctrine-messenger": "^6.4",
        "symfony/error-handler": "^6.4",
        "symfony/http-client": "^6.4",
        "symfony/monolog-bridge": "^6.4",
        "symfony/phpunit-bridge": "^7.0.4",
        "vimeo/psalm": "^5.22.2"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\DispatchBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\DispatchBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": false
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
